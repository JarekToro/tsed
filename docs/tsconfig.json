{
  "extends": "@tsed/typescript/tsconfig.node.json",
  "compilerOptions": {
    "baseUrl": ".",
    "noEmit": true,
    "paths": {}
  },
  "include": ["**/*.ts", "**/*.json", "**/*.mts", "./.vitepress/**/*.mts"],
  "exclude": [
    "./packages/*/src/**/*.spec.ts",
    "./packages/*/*/src/**/*.spec.ts",
    "**/__tests__/**/*.ts",
    "**/__mock__/**/*.ts",
    "**/helpers/**/*.ts",
    "node_modules",
    "**/generate_code/**",
    "**/generated/**",
    "**/docs/**",
    "**/lib/**"
  ]
}
